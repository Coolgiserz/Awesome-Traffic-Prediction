{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Paper Search Domain Config v2",
  "type": "object",
  "required": ["version", "search", "post", "rank"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 2
    },
    "name": {
      "type": "string"
    },
    "search": {
      "type": "object",
      "required": ["queries"],
      "properties": {
        "queries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["openalex", "arxiv", "semantic_scholar", "crossref"]
          }
        },
        "year_range": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["rolling", "fixed"]
            },
            "lookback_years": {
              "type": "integer",
              "minimum": 1
            },
            "from_year": {
              "type": "integer"
            },
            "to_year": {
              "type": "integer"
            }
          }
        },
        "limit_per_query": {
          "type": "integer",
          "minimum": 1
        },
        "output_limit": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "post": {
      "type": "object",
      "required": ["rules"],
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "keywords"],
            "properties": {
              "id": {
                "type": "string"
              },
              "field": {
                "type": "string",
                "enum": ["title", "venue", "source"]
              },
              "op": {
                "type": "string",
                "enum": ["any", "all"]
              },
              "keywords": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              },
              "required": {
                "type": "boolean"
              },
              "exclude": {
                "type": "boolean"
              },
              "weight": {
                "type": "number"
              }
            }
          }
        },
        "min_score": {
          "type": "number"
        }
      }
    },
    "rank": {
      "type": "object",
      "properties": {
        "recency_weight": {
          "type": "number"
        },
        "source_weights": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "tie_breakers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "year_desc",
              "year_asc",
              "title_asc",
              "title_desc",
              "source_asc",
              "source_desc"
            ]
          }
        }
      }
    },
    "runtime": {
      "type": "object",
      "properties": {
        "max_requests": {
          "type": "integer",
          "minimum": 1
        },
        "min_interval_seconds": {
          "type": "number",
          "minimum": 0
        },
        "max_retries": {
          "type": "integer",
          "minimum": 0
        },
        "retry_base_seconds": {
          "type": "number",
          "minimum": 0
        },
        "cache_dir": {
          "type": "string"
        },
        "cache_ttl_hours": {
          "type": "integer",
          "minimum": 0
        },
        "source_min_interval_seconds": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0
          }
        }
      }
    }
  },
  "additionalProperties": true
}
